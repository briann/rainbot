{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "sourceMap": true,
        "stripInternal": true,
        "target": "es2017",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}